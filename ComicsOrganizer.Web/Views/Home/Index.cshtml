@section scripts{
    <script>
        $(function () {
            $('#submit').on('click', function (evt) {

                console.log("is it here?");

                var request = $.ajax({ method: "POST", url: "https://localhost:44340/ComicsSeries", data: { name: "John" },contentType:"application/json",dataType:"json" }).done(function (msg) { alert("Data Saved: " + msg); });

                request.fail(function (jqXHR, textStatus) { alert("Request failed: " + textStatus); })



